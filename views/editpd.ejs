        <td colspan="6">No Record Found</td>
      </tr>
      <% } %>
      </tbody>
      <script type="text/javascript">
        var flagIsEdited = false;
        function updateOne() {
          $('.upDate').click(function(event) {
            if (!flagIsEdited) {
              event.preventDefault();
              $('.inputDisabled').prop("disabled", false);
              flagIsEdited = true;
